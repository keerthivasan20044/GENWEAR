# ============================================
# GENWEAR Server Configuration
# ============================================

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local MongoDB:
MONGO_URI=mongodb://localhost:27017/genwear

# MongoDB Atlas (uncomment and update):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/genwear?retryWrites=true&w=majority

# Authentication & Security
JWT_SECRET=your_very_long_and_secure_random_string_here_minimum_32_characters_recommended
JWT_EXPIRE=30d
BCRYPT_ROUNDS=10

# Client Configuration (CORS)
CLIENT_URL=http://localhost:5173

# Cloudinary Configuration (Image Uploads)
CLOUDINARY_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@genwear.com

# Payment Gateway (Optional - Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# API Documentation
API_DOCS_URL=/api/docs
